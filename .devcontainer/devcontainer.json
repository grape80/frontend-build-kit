{
	"dockerComposeFile": "../compose.yaml",
	"service": "cicd",
	"workspaceFolder": "/workspace",
	"customizations": {
		"vscode": {
			"settings": {
				"workbench.startupEditor": "none",
				"git.enableSmartCommit": true,
				"editor.renderWhitespace": "all",
				"editor.formatOnSave": true,
				"files.autoSave": "afterDelay",
				"files.associations": {
					"*.gotmpl": "html",
					"*.partial": "html"
				},
				"emeraldwalk.runonsave": {
					"commands": [
						{
							"match": "\\.gotmpl$",
							"cmd": "gotmpl2html --basedir=src/app ${file} > ${workspaceFolder}/live/app/${fileBasenameNoExt}.html"
						}
					]
				},
				"livePreview.serverRoot": "live/"
			},
			"extensions": [
				"redhat.vscode-yaml",
				"emeraldwalk.RunOnSave",
				"ms-vscode.live-server"
			]
		}
	}
}